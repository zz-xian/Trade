<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground"
    tools:context=".mvp.view.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/tab_publish"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:drawablePadding="8dp"
        android:drawableTop="@mipmap/tab_publish"
        android:gravity="center"
        android:text="发布"
        android:textSize="12sp"
        android:textColor="@drawable/text_color_selector_1"
        android:background="@null" />

    <LinearLayout
        android:layout_toLeftOf="@id/tab_publish"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/home_icon_selector"
            android:gravity="center"
            android:text="首页"
            android:textSize="12sp"
            android:textColor="@drawable/text_color_selector_1"
            android:selectAllOnFocus="true" />
        <TextView
            android:id="@+id/tab_near"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/near_icon_selector"
            android:gravity="center"
            android:text="周边"
            android:textSize="12sp"
            android:textColor="@drawable/text_color_selector_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@id/tab_publish"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/tab_sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/sort_icon_selector"
            android:gravity="center"
            android:text="分类"
            android:textSize="12sp"
            android:textColor="@drawable/text_color_selector_1" />
        <TextView
            android:id="@+id/tab_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/self_icon_selector"
            android:gravity="center"
            android:text="我的"
            android:textSize="12sp"
            android:textColor="@drawable/text_color_selector_1" />
    </LinearLayout>
</RelativeLayout>

